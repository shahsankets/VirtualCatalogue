    <tr>
      <td> <%= product.name %>         </td>
      <td><%= product.brand %>       </td>
      <td><%= product.description %> </td>
      <td><%= product.category_id %> </td>
      <td><%= product.price %>       </td>
      <td><%= product.picture %>   </td>
      <td><%= product.location %> </td>
      <td><a href="/product/<%=product.id %>">more..</a></td>
    </tr>
    <%end%>
